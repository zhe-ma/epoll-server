{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mkdir",
      "type": "shell",
      "command": "mkdir build -p"
    },

    {
      "label": "cmake",
      "type": "shell",
      "command": "cmake -DCMAKE_BUILD_TYPE=debug ..",
      "dependsOn": ["mkdir"],  // 执行之前首先创建build目录
      "options": {
        "cwd": "${workspaceFolder}/build"  // 切换到build目录
      },
    },

    {
      "label": "make",
      "type": "shell",
      "command": "make -j4",
      "options": {
        "cwd": "${workspaceFolder}/build"  // 切换到build目录
      },
    }
  ]
}